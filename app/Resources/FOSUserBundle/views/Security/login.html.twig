{% block body %}
{% endblock %}
{% trans_default_domain 'FOSUserBundle' %}
{% extends "::base.html.twig" %}
{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-3 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Connexion</h3>
            </div>
            <div class="panel-body">
                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <fieldset>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input id="username" type="text" class="form-control" name="_username" value="{{ last_username }}" required="required" placeholder="Login">
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <input id="password" type="password" class="form-control" name="_password" placeholder="Mot de passe">
                        </div>

                        <input type="submit" class="login login-submit" id="_submit" name="_submit" value="{{ 'Connexion'|trans }}" />
                    </fieldset>
                </form>
            </div>
        </div>
    </div>




{% endblock fos_user_content %}